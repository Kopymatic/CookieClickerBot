{
    "compilerOptions": {
        "moduleResolution": "node",
        "types": ["node"],
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2020",
        "allowJs": true,
        "rootDir": "./src/",
        "resolveJsonModule": true,
        "typeRoots": ["./src/types"],
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "./built/**/*"],
    "include": ["src/**/*"],
    "paths": {
        "resources/*": ["resources/*"]
    }
}
